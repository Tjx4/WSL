<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/medium_view_padding"
    android:layout_marginHorizontal="@dimen/small_view_margin"
    android:background="@color/lightBackground">

    <TextView
        android:id="@+id/tvLocationName"
        style="@style/LargeDarkTextView"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvLocationDescription"
        style="@style/MediumGreyTextView"
        android:text="Location description ation description on des crription ation description on des cr"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvLocationDateTime"
        style="@style/SmallGreyTextView"
        android:layout_width="0dp"
        android:gravity="end"
        android:text="You were here on 00/00/00 00:00"
        android:layout_marginRight="@dimen/medium_view_margin"
        app:layout_constraintTop_toTopOf="@+id/btnMore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnMore"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        style="@style/DefButton"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:id="@+id/btnMore"
        android:text="@string/more"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    <ImageButton
        android:id="@+id/imgMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_menu_dark"
        android:background="@android:color/transparent"
        android:padding="@dimen/xsmall_view_padding"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/medium_view_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onMenuButtonClicked"/>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/flStatusBar"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="@dimen/def_statusbar_height"
        android:background="@color/colorTransStatusBar"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
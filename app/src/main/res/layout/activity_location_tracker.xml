    <ImageButton
        android:id="@+id/imgBSaveLocation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_locations_save_dark"
        android:background="@color/lightBackground"
        android:padding="@dimen/small_view_padding"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/large_view_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onSaveLocationButtonClicked"/>

    <ImageButton
        android:id="@+id/imgBLocations"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_locations_list_dark"
        android:background="@color/lightBackground"
        android:padding="@dimen/small_view_padding"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/large_view_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onShowLocationButtonClicked"/>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/flStatusBar"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="@dimen/def_statusbar_height"
        android:background="@color/colorTransStatusBar"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
